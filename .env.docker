# ========================================
# Docker 环境配置文件
# ========================================
# 使用方法：cp .env.docker .env
# 注意：本文件专门为 Docker 环境优化，配置已与 docker-compose.yml 匹配
# ========================================

# ========================================
# Docker 端口配置
# 如果宿主机端口被占用，可以修改这里
# ========================================
DOCKER_NGINX_PORT=8080
# DOCKER_VITE_PORT=5173

# ========================================
# 数据库和缓存端口（可选）
# 默认不映射到宿主机（安全考虑，避免端口冲突）
# 如需使用图形化工具（如 Navicat），取消下面的注释
# ========================================
# FORWARD_DB_PORT=3306
# FORWARD_REDIS_PORT=6379

APP_NAME="蝉印诊所管家"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Shanghai
APP_URL=http://localhost:8080

APP_LOCALE=zh_CN
APP_FALLBACK_LOCALE=zh_CN
APP_FAKER_LOCALE=zh_CN

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========================================
# 数据库配置（Docker 环境）
# ⚠️ DB_HOST 使用 docker-compose.yml 中的服务名
# ========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=clinic_central
DB_USERNAME=clinic
DB_PASSWORD=clinic_password

# ========================================
# 会话和缓存配置
# ========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
# CACHE_PREFIX=

# ========================================
# Redis 配置（Docker 环境）
# ⚠️ REDIS_HOST 使用 docker-compose.yml 中的服务名
# ========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# 邮件配置
# ========================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# AWS S3 配置（可选）
# 生产环境建议使用 S3/OSS 存储
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# Vite 前端配置
# ========================================
VITE_APP_NAME="${APP_NAME}"

# ========================================
# Reverb WebSocket 配置
# 注意：这些参数会从后台管理系统读取，无需手动修改
# ========================================
REVERB_APP_ID=368780
REVERB_APP_KEY=vnh16qoqhosqnxth3dla
REVERB_APP_SECRET=n012hw95mdsxpzaaz4nc
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ========================================
# 多租户配置（可选）
# 如果使用多租户功能，配置中心域名
# ========================================
CENTRAL_DOMAIN=localhost
CENTRAL_ADMIN_PATH=admin
